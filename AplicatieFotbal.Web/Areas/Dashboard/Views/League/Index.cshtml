@model Models.ViewModels.DataPerLeague

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link" asp-area="Dashboard" asp-controller="Home" asp-action="Index" aria-current="page">HOME</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#totals" role="tab" aria-controls="home" aria-selected="true">TOTALS</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#matches" role="tab" aria-controls="profile" aria-selected="false">MATCHES</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#tops" role="tab" aria-controls="contact" aria-selected="false">TOPS</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="totals" role="tabpanel" aria-labelledby="home-tab">
        @{
            Html.RenderPartial("_LeagueStats.cshtml", Model.Totals);
        }
    </div>
    <div class="tab-pane fade" id="matches" role="tabpanel" aria-labelledby="profile-tab">
        @{
            Html.RenderPartial("_Matches.cshtml", Model.Matches);
        }
    </div>
    <div class="tab-pane fade" id="tops" role="tabpanel" aria-labelledby="contact-tab">
        @{
            Html.RenderPartial("_TopStats.cshtml", Model.Tops);
        }
    </div>
  
</div>